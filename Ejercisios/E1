import java.util.Scanner;
public class E1 {
public static void main(String[] args) {
int[][] matriz = new int[3][3];
// leer matriz
Scanner sacnner = new Scanner(System.in);
System.out.println("Ingresa los valores de las matriz: ");
for (int i = 0; i < 3; i++) {
    for (int j = 0; j < 3; j++) {
        matriz[i][j] = scanner.nextInt();
    }
}
// pedir el numero de la fila
System.out.println("Ingresa el numero de una fila (1, 2 o 3): ");
int fila = scanner.nextInt();
// Validar el numero de la fila ingresado
if (fila < 1 || fila > 3) {
    System.out.println("Numero de la fila invalido");
}else{
    // Encontrar el numero maximo de la fila
    int maximo = matriz[fila - 1][0];
    for (int j = 1; j < 3; j++) {
        if (matriz[fila - 1][j] > maximo) {
            maximo = matriz[fila - 1][j];
        }
    }
    // Mostrar el valor maximo de la fila
    System.out.println("El valor maximo de la fila "+fila+"es: "+maximo);
}
}
}